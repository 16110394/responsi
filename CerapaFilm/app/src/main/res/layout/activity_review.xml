
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cerapafilm.cerapafilm.MainActivity">


    <ImageView
        android:layout_width="400dp"
        android:layout_height="350dp"
        app:srcCompat="@drawable/noimage"
        android:scaleType="fitXY"
        android:id="@+id/imgPoster"
        android:layout_gravity="center_horizontal"
        />


    <TextView
        android:text="xxx-xx-xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/tglTayang"

        android:layout_alignBaseline="@+id/tanggal"
        android:layout_alignBottom="@+id/tanggal"
        android:layout_toEndOf="@+id/tanggal"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="sinopis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSinopsis"

        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/tanggal"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="tanggal tayang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/tanggal"

        android:layout_below="@+id/tvNama"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/tvNama"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/imgPoster"
        android:layout_alignParentStart="true" />

</RelativeLayout>
